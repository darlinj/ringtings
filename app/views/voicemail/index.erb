<h2>Voicemail inbox</h2>
<% unless @voicemail.empty? %>
  <div class="voicemail">
    <table>
      <thead>
        <tr>
          <th>From</th>
          <th>Date Created</th>
          <th>Priority</th>
          <th>Last heard</th>
          <th>Duration</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @voicemail.each do |entry| %>
          <tr>
            <td><%= entry[:from ] %></td>
            <td><%= entry[:date_created] %></td>
            <td><%= entry[:priority ] %></td>
            <td><%= entry[:last_heard ] %></td>
            <td><%= entry[:duration ] %></td>
            <td><%= link_to(:download, voicemail_url(entry[:filename].sub(/.wav$/,"")), :id => "download_#{entry[:filename]}") %></td>
            <td><%= link_to(:delete, voicemail_url(entry[:filename].sub(/.wav$/,"")), :method => :delete, :id => "delete_#{entry[:filename]}") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  You currently have no voicemail
<% end %>
